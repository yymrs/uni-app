
.carousel {
	width: 100%;
	height: 100%;
}
.super-hot {
	margin-top: 12rpx;
	padding: 20rpx;
}
.hot-title-wapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.hot-ico {
	width: 30rpx;
	height: 30rpx;
	margin-right: 20rpx;
}
.hot-title {
	font-size: 20rpx;
	font-weight: bold;
}
.hot {
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	white-space: nowrap;
}
.single-poster {
	display: inline-block;
	margin-left: 20rpx;
}
.poster-wapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.poster {
	width: 200rpx;
	height: 270rpx;
}
.movie-name {
	width: 200rpx;
	margin-top: 10rpx;
	font-size: 14rpx;
	font-weight: bold;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.movie-score-wapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
}
.star-ico  {
	width: 20rpx;
	height: 20rpx;
	margin-top: 6rpx;
}
.movie-score {
	font-weight: bold;
	color: grey;
	margin-left: 8rpx;
	font-size: 12rpx
}

